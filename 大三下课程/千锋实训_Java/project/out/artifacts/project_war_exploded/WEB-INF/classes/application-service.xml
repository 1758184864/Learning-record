<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd
		http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx.xsd">

    <!--    2)配置服务层： applicationContext-service.xml-->
    <!--    ①包的扫描 ，目的创建对象  ，扫描service实现类中的 @Service注解的类，对象的创建-->
    <context:component-scan base-package="com.cdtu.sys.service.impl"></context:component-scan>
    <context:component-scan base-package="com.cdtu.bus.service.impl"></context:component-scan>
    <context:component-scan base-package="com.cdtu.stat.service.impl"></context:component-scan>

    <!--    ②配置事务管理器-->
    <bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <!--现在dataSource是报错的，但是后期spring的配置文件会合并成一个文件所以现在报错没事-->
        <property name="dataSource" ref="dataSource" ></property>
    </bean>

    <!--    ③通知  advice 事务管理的-->
    <tx:advice id="transactionInterceptor" transaction-manager="transactionManager">
        <tx:attributes>
            <tx:method name="add*" propagation="REQUIRED" />
            <tx:method name="update*" propagation="REQUIRED" />
            <tx:method name="delete*" propagation="REQUIRED" />
            <tx:method name="change*" propagation="REQUIRED" />
            <tx:method name="reset*" propagation="REQUIRED" />
            <tx:method name="get*" read-only="true" />
            <tx:method name="load*" read-only="true" />
            <tx:method name="insertLoginLog" read-only="false" />
            <tx:method name="insertLogInfo" read-only="false" />
            <tx:method name="*" read-only="true" />
        </tx:attributes>
    </tx:advice>

    <!-- ④aop  通知和且面整合完成事务管理-->
    <aop:config>
        <!--切点-->
        <aop:pointcut id="p1" expression="execution(* com.cdtu.sys.service.impl.*.*(..))"/>
        <aop:pointcut id="p2" expression="execution(* com.cdtu.bus.service.impl.*.*(..))"/>
        <!--织入的配置-->
        <aop:advisor advice-ref="transactionInterceptor" pointcut-ref="p1"/>
        <aop:advisor advice-ref="transactionInterceptor" pointcut-ref="p2"/>
    </aop:config>

</beans>
